Package: oeli
Type: Package
Title: Utilities for Developing Data Science Software
Version: 0.1.0
Authors@R: c(
    person("Lennart", "Oelschl\u00e4ger", 
           email = "oelschlaeger.lennart@gmail.com", 
           role = c("aut", "cre"))
